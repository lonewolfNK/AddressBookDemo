@{
    ViewData["Title"] = "Country Add/edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AddressBookDemo.Areas.LOC_Country.Models.LOC_CountryModel
<div class="row">
    <div class="col-md-12" style="font-family:'Bahnschrift';font-size:large">
        <h3>@TempData["SuccessMSG"]</h3>
        <form method="post" asp-controller="LOC_Country" asp-action="Save" enctype="multipart/form-data">
            @Html.HiddenFor(x=>x.CountryID)
            @Html.HiddenFor(x=>x.PhotoPath)
            <div class="form-group">
                <label>Country Name :</label>
                <input type="text" class="form-control" asp-for="CountryName" placeholder="Enter Country Name" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country Code :</label>
                <input type="text" class="form-control" asp-for="CountryCode" placeholder="Enter Country Code" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload File</label>
                <input type="file" asp-for="File" placeholder="Upload your file" class="form-control" />
            </div>
            <div class="form-group">
                <label>Creation Date :</label>
                <input type="date" class="form-control" asp-for="CreationDate" />
            </div>
            <div class="form-group">
                <label>Modification Date :</label>
                <input type="date" class="form-control" asp-for="ModificationDate" />
            </div>
            <br />

            <input type="submit" class="btn btn-dark" value="Save" />
            <a asp-controller="LOC_Country" asp-action="Index" class="btn btn-outline-success">Cancel</a>

        </form>
    </div>
</div>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

