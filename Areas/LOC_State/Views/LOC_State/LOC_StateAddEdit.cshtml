@{
    ViewData["Title"] = "State Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AddressBookDemo.Areas.LOC_State.Models.LOC_StateModel
<div class="row">
    <div class="col-md-12" style="font-family:'Bahnschrift';font-size:large">
        <h3>@TempData["SuccessMSG"]</h3>
        <form method="post" asp-controller="LOC_State" asp-area="LOC_State" asp-action="Save" >
            @Html.HiddenFor(x => x.StateID)
            <div class="form-group">
                <label>Country Name :</label>
                <input type="text" class="form-control" asp-for="CountryID" placeholder="Enter Country ID" />
                <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                    <option value="">Select Country</option>
                </select>
                <span asp-validation-for="CountryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>State Name :</label>
                <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>State Code :</label>
                <input type="text" class="form-control" asp-for="StateCode" placeholder="Enter State Code" />
                <span asp-validation-for="StateCode" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <label>Creation Date :</label>
                <input type="date" class="form-control" asp-for="CreationDate" />
            </div>
            <div class="form-group">
                <label>Modification Date :</label>
                <input type="date" class="form-control" asp-for="ModificationDate" />
            </div>
            <br />

            <input type="submit" class="btn btn-dark" value="Save" />
            <a asp-action="Index" class="btn btn-outline-success">Cancel</a>
          
        </form>
    </div>
</div>
@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }


